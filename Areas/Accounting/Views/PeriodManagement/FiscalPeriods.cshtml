@model AspNetCoreMvcTemplate.Areas.Accounting.ViewModels.FiscalPeriodsViewModel

@{
    ViewData["Title"] = "Fiscal Periods";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Fiscal Periods - @Model.FiscalYearName (@Model.FiscalYearCode)</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="PeriodManagement" asp-action="FiscalYears">Fiscal Years</a></li>
                    <li class="breadcrumb-item active">Fiscal Periods</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-check"></i> Success!</h5>
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Fiscal Periods</h3>
                <div class="card-tools">
                    <a asp-action="CreateFiscalPeriod" asp-route-fiscalYearId="@Model.FiscalYearId" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var period in Model.FiscalPeriods)
                        {
                            <tr>
                                <td>@period.Code</td>
                                <td>@period.Name</td>
                                <td>@period.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@period.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (period.IsClosed)
                                    {
                                        <span class="badge badge-danger">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Open</span>
                                    }
                                    @if (!period.IsActive)
                                    {
                                        <span class="badge badge-warning">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditFiscalPeriod" asp-route-id="@period.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!period.IsClosed)
                                        {
                                            <form asp-action="ClosePeriod" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@period.Id" />
                                                <input type="hidden" name="fiscalYearId" value="@Model.FiscalYearId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to close this period?');">
                                                    <i class="fas fa-lock"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="OpenPeriod" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@period.Id" />
                                                <input type="hidden" name="fiscalYearId" value="@Model.FiscalYearId" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to open this period?');">
                                                    <i class="fas fa-lock-open"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="DeleteFiscalPeriod" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@period.Id" />
                                            <input type="hidden" name="fiscalYearId" value="@Model.FiscalYearId" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this period?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
