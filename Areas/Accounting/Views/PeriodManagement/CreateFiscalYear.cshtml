@model AspNetCoreMvcTemplate.Areas.Accounting.ViewModels.FiscalYearViewModel
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["CreateFiscalYear"];
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@Localizer["CreateFiscalYear"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="PeriodManagement" asp-action="FiscalYears">@Localizer["FiscalYears"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["Create"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Localizer["CreateFiscalYear"]</h3>
            </div>
            <form asp-action="CreateFiscalYear" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name">@Localizer["Name"]</label>
                        <input asp-for="Name" class="form-control" placeholder="@Localizer["EnterFiscalYearName"]" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Code">@Localizer["Code"]</label>
                        <input asp-for="Code" class="form-control" placeholder="@Localizer["EnterFiscalYearCode"]" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate">@Localizer["StartDate"]</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate">@Localizer["EndDate"]</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="IsActive" type="checkbox" class="custom-control-input" />
                            <label asp-for="IsActive" class="custom-control-label">@Localizer["IsActive"]</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
                    <a asp-action="FiscalYears" class="btn btn-default float-right">@Localizer["Cancel"]</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
