@model IEnumerable<AspNetCoreMvcTemplate.Areas.Accounting.Models.Account>

@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chart of Accounts</h3>
        <div class="card-tools">
            <a asp-area="Accounting" asp-controller="ChartOfAccounts" asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Create New Account
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name (English)</th>
                        <th>Name (Arabic)</th>
                        <th>Type</th>
                        <th>Level</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.Code</td>
                            <td>@account.NameEn</td>
                            <td>@account.NameAr</td>
                            <td>@account.Type</td>
                            <td>@account.Level</td>
                            <td>
                                @if (account.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-action="CostCenters" asp-route-id="@account.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-sitemap"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}
