@using AspNetCoreMvcTemplate.Areas.Accounting.Models
@model IEnumerable<AspNetCoreMvcTemplate.Areas.Accounting.Models.JournalEntry>

@{
    ViewData["Title"] = "Journal Entries";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Journal Entries</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Create New Journal Entry
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Number</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Reference</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td>@entry.Number</td>
                            <td>@entry.Date.ToString("d")</td>
                            <td>@entry.Description</td>
                            <td>@entry.Reference</td>
                            <td>
                                @switch (entry.Status)
                                {
                                    case JournalEntryStatus.Draft:
                                        <span class="badge badge-warning">Draft</span>
                                        break;
                                    case JournalEntryStatus.Pending:
                                        <span class="badge badge-info">Pending</span>
                                        break;
                                    case JournalEntryStatus.Approved:
                                        <span class="badge badge-success">Approved</span>
                                        break;
                                    case JournalEntryStatus.Rejected:
                                        <span class="badge badge-danger">Rejected</span>
                                        break;
                                }
                            </td>
                            <td>@entry.TotalDebit.ToString("N2")</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (entry.Status == JournalEntryStatus.Draft || entry.Status == JournalEntryStatus.Rejected)
                                    {
                                        <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}
