@model AspNetCoreMvcTemplate.Areas.Accounting.ViewModels.TrialBalanceFilterViewModel

@{
    ViewData["Title"] = "Trial Balance Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trial Balance Report</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="TrialBalance" method="post">
            <div class="form-group">
                <label for="fromDate">From Date:</label>
                <input type="date" id="fromDate" name="fromDate" class="form-control" />
            </div>
            <div class="form-group">
                <label for="toDate">To Date:</label>
                <input type="date" id="toDate" name="toDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group">
                <label asp-for="CostCenterId" class="control-label"></label>
                <select asp-for="CostCenterId" class="form-control" asp-items="@(new SelectList(Model.CostCenters, "Id", "NameEn"))">
                    <option value="">All Cost Centers</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate Report" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Any additional script if needed for date picker or form validation
        });
    </script>
}
