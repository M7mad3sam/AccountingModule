@model AspNetCoreMvcTemplate.Areas.Accounting.ViewModels.TrialBalanceFilterViewModel

@{
    ViewData["Title"] = "Cash Flow Statement";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Cash Flow Statement</h3>
    </div>
    <div class="card-body">
        <form asp-action="CashFlow" method="get" id="filter-form">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="AsOfDate" class="control-label">As of Date</label>
                        <input asp-for="AsOfDate" class="form-control" type="date" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CostCenterId" class="control-label">Cost Center</label>
                        <select asp-for="CostCenterId" asp-items="@(new SelectList(Model.CostCenters, "Id", "NameEn"))" class="form-control select2">
                            <option value="">-- All Cost Centers --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter"></i> Apply Filter
                            </button>
                            <a asp-action="CashFlowReport" asp-route-asOfDate="@Model.AsOfDate.ToString("yyyy-MM-dd")" 
                               asp-route-costCenterId="@Model.CostCenterId" class="btn btn-info" target="_blank">
                                <i class="fas fa-print"></i> Print Report
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        
        <hr />
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Description</th>
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Operating Activities Section -->
                    <tr class="bg-light">
                        <th colspan="3">Cash Flow from Operating Activities</th>
                    </tr>
                    
                    <!-- Net Income -->
                    <tr>
                        <td></td>
                        <td>Net Income</td>
                        <td class="text-right">@ViewBag.NetIncome.ToString("N2")</td>
                    </tr>
                    
                    <!-- Adjustments to reconcile net income -->
                    <tr>
                        <th colspan="3" class="pl-4">Adjustments to reconcile net income:</th>
                    </tr>
                    
                    <!-- Depreciation and Amortization -->
                    <tr>
                        <td class="pl-5"></td>
                        <td>Depreciation and Amortization</td>
                        <td class="text-right">@ViewBag.DepreciationAmortization.ToString("N2")</td>
                    </tr>
                    
                    <!-- Changes in operating assets and liabilities -->
                    <tr>
                        <th colspan="3" class="pl-4">Changes in operating assets and liabilities:</th>
                    </tr>
                    
                    @if (ViewBag.OperatingChanges != null)
                    {
                        foreach (var item in ViewBag.OperatingChanges)
                        {
                            <tr>
                                <td class="pl-5"></td>
                                <td>@item.Description</td>
                                <td class="text-right">@item.Amount.ToString("N2")</td>
                            </tr>
                        }
                    }
                    
                    <!-- Net Cash from Operating Activities -->
                    <tr class="font-weight-bold">
                        <td colspan="2" class="text-right">Net Cash from Operating Activities</td>
                        <td class="text-right">@ViewBag.NetCashFromOperating.ToString("N2")</td>
                    </tr>
                    
                    <!-- Investing Activities Section -->
                    <tr class="bg-light">
                        <th colspan="3">Cash Flow from Investing Activities</th>
                    </tr>
                    
                    @if (ViewBag.InvestingActivities != null)
                    {
                        foreach (var item in ViewBag.InvestingActivities)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Description</td>
                                <td class="text-right">@item.Amount.ToString("N2")</td>
                            </tr>
                        }
                    }
                    
                    <!-- Net Cash from Investing Activities -->
                    <tr class="font-weight-bold">
                        <td colspan="2" class="text-right">Net Cash from Investing Activities</td>
                        <td class="text-right">@ViewBag.NetCashFromInvesting.ToString("N2")</td>
                    </tr>
                    
                    <!-- Financing Activities Section -->
                    <tr class="bg-light">
                        <th colspan="3">Cash Flow from Financing Activities</th>
                    </tr>
                    
                    @if (ViewBag.FinancingActivities != null)
                    {
                        foreach (var item in ViewBag.FinancingActivities)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Description</td>
                                <td class="text-right">@item.Amount.ToString("N2")</td>
                            </tr>
                        }
                    }
                    
                    <!-- Net Cash from Financing Activities -->
                    <tr class="font-weight-bold">
                        <td colspan="2" class="text-right">Net Cash from Financing Activities</td>
                        <td class="text-right">@ViewBag.NetCashFromFinancing.ToString("N2")</td>
                    </tr>
                    
                    <!-- Net Increase/Decrease in Cash -->
                    <tr class="font-weight-bold bg-info">
                        <td colspan="2" class="text-right">Net Increase (Decrease) in Cash</td>
                        <td class="text-right">@ViewBag.NetIncreaseInCash.ToString("N2")</td>
                    </tr>
                    
                    <!-- Cash at Beginning of Period -->
                    <tr>
                        <td></td>
                        <td>Cash at Beginning of Period</td>
                        <td class="text-right">@ViewBag.CashAtBeginning.ToString("N2")</td>
                    </tr>
                    
                    <!-- Cash at End of Period -->
                    <tr class="font-weight-bold bg-info">
                        <td colspan="2" class="text-right">Cash at End of Period</td>
                        <td class="text-right">@ViewBag.CashAtEnd.ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.select2').select2({
                theme: 'bootstrap4'
            });
        });
    </script>
}
