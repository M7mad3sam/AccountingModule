@model AspNetCoreMvcTemplate.Areas.Accounting.ViewModels.VendorViewModel
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["VendorDetails"];
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-area="Accounting" asp-controller="Vendors" asp-action="Index">@Localizer["Vendors"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["Details"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Localizer["VendorInformation"]</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Code)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NameEn)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NameEn)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NameAr)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.NameAr)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Type)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TaxRegistrationNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.TaxRegistrationNumber)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CommercialRegistration)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CommercialRegistration)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ContactPerson)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactPerson)</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PaymentTerms)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentTerms)</dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SubjectToWithholdingTax)</dt>
                            <dd class="col-sm-8">
                                @if (Model.SubjectToWithholdingTax)
                                {
                                    <span class="badge badge-info">@Localizer["Yes"]</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">@Localizer["No"]</span>
                                }
                            </dd>
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsActive)</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">@Localizer["Active"]</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">@Localizer["Inactive"]</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <h4>@Localizer["BankingInformation"]</h4>
                        <dl class="row">
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BankName)</dt>
                            <dd class="col-sm-4">@Html.DisplayFor(model => model.BankName)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BankAccountNumber)</dt>
                            <dd class="col-sm-4">@Html.DisplayFor(model => model.BankAccountNumber)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IBAN)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.IBAN)</dd>
                        </dl>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <dl class="row">
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notes)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["Edit"]</a>
                    <a asp-action="Index" class="btn btn-secondary">@Localizer["BackToList"]</a>
                </div>
            </div>
        </div>
    </div>
</section>
